<fd:FdWindow x:Class="FirstDraft.Controls.FdMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:FirstDraft.Controls"
             xmlns:fd="clr-namespace:FirstDraft"
             xmlns:fdcontrols="clr-namespace:FirstDraft.Controls"
             Style="{DynamicResource ToolFdWindow}"
             mc:Ignorable="d" ResizeMode="NoResize"
             WindowStartupLocation="CenterOwner"
             Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid  DockPanel.Dock="Top" Height="36">
            <DockPanel Margin="0 0 110 0">

                <Border DockPanel.Dock="Left" Width="25"  Height="25" Margin="5 0 0 0" CornerRadius="4">
                    <fdcontrols:IconControl x:Name="icon" Icon="{Binding infomation_fill, Source={StaticResource IconSet}}"
                                  IconSize="20"  RenderTransformOrigin="0.5 0.5"
                                  Foreground="{DynamicResource DefaultForeground}">
                    </fdcontrols:IconControl>
                </Border>

                <TextBlock x:Name="textTitle" Text="弹窗消息" VerticalAlignment="Center" Opacity="0.8" Margin="10 0 0 0"/>

            </DockPanel>
        </Grid>

        <DockPanel Grid.Row="1">

            <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="10 0 10 10">
                <ToggleButton Content="是" Padding="20 5" Click="Yes_Click"/>
                <Button x:Name="buttonNO" IsDefault="False" Padding="20 5" Content="否" Margin="-1 0 0 0" Click="No_Click"/>
            </WrapPanel>


            <DockPanel >
                <Border x:Name="ask" Visibility="Collapsed" Background="{DynamicResource ExAccent}" CornerRadius="30" Width="30"  Height="30" Margin="10">
                    <TextBlock Text="?" FontSize="20" FontWeight="Black" Foreground="{DynamicResource Accent}" DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Border x:Name="info" Visibility="Collapsed" Background="{DynamicResource ExAccent}" CornerRadius="30" Width="30"  Height="30" Margin="10">
                    <TextBlock Text="i" FontSize="20" FontWeight="Black" Foreground="{DynamicResource DefaultBackground}" DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Border x:Name="warn" Visibility="Collapsed" Background="{DynamicResource ExAccent}" CornerRadius="30" Width="30"  Height="30" Margin="10">
                    <TextBlock Text="!" FontSize="20" FontWeight="Black" Foreground="Red" DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" DockPanel.Dock="Top" x:Name="textMessage" Text="确定要删除吗？"/>
            </DockPanel>


        </DockPanel>
    </Grid>
</fd:FdWindow>